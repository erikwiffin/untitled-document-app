{% extends "base.jinja2" %}

{% block body %}
  <section>
    <div class="container-fluid">

      <!-- Breadcrumbs -->
      <div class="row">
        <div class="col">
          <h2>
            <i class="bi bi-house-door-fill"></i> Projects
          </h2>
        </div>
      </div>

      <!-- Projects List -->
      <div class="row">
        <div class="col">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Documents</th>
              </tr>
            </thead>
            <tbody>
              {% for project in projects %}
                <tr>
                  <td>{{ project.shortid }}</td>
                  <td><a href="/projects/{{ project.shortid }}">{{ project.name }}</a></td>
                  <td>{{ project.documents | length }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>

      <!-- New Project Form -->
      <div class="row justify-content-sm-center">
        <div class="col col-lg-8 bg-light p-3">
          <form action="{{ url_for('main.create_project') }}" method="post">
            <div class="form-group">
              <label for="name">Project Name</label>
              <input type="text" class="form-control" id="name" name="name">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>

    </div>
  </section>
{% endblock %}
